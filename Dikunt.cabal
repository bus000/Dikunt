name:                Dikunt
version:             0.0.1.0
license:             BSD3
license-file:        LICENSE
author:              Magnus Stavngaard
maintainer:          magnus@stavngaard.dk
category:            Network
build-type:          Custom
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10
data-files:          data/dikunt.config,
                     data/WordReplacerData.db,
                     data/InsultData.db,
                     data/trump.txt,
                     data/msgLog.db,
                     data/privmsgLog.db

library
  build-depends:       base >=4.8 && <4.10,
                       network >=2.6 && <2.7,
                       process >=1.2,
                       text >=1.2.2.1,
                       QuickCheck >=2.9.1,
                       aeson >=1.2.0.0,
                       bytestring >=0.10.8.1,
                       hslogger >=1.2.10,
                       safe >=0.3.9
  GHC-Options:         -Wall
  exposed-modules:     Bot,
                       BotTypes,
                       IRCParser.IRCMessageParser,
                       IRCWriter.IRCWriter
  other-modules:       IRCParser.Layer1Impl,
                       IRCParser.Layer2Impl,
                       IRCWriter.Impl,
                       Monitoring
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite Tasty
  type:                exitcode-stdio-1.0
  build-depends:       base >=4.9,
                       safe >=0.3.9,
                       regex-pcre >=0.94.4,
                       aeson >=1.2.0.0,
                       text >=1.2.2.1,
                       mtl >=2.2.1,
                       time >=1.6.0.1,
                       process >=1.2,
                       tasty,
                       tasty-hunit,
                       tasty-quickcheck,
                       QuickCheck >=2.9.1
  hs-source-dirs:      test, src
  main-is:             Tasty.hs
  default-language:    Haskell2010
  GHC-Options:         -Wall

executable dikunt
  main-is:             Main.hs
  build-depends:       base >=4.8 && <4.10,
                       cmdargs >=0.10.14,
                       configurator >=0.3.0.0,
                       hslogger >=1.2.10,
                       containers >=0.5.7.1,
                       Dikunt
  GHC-Options:         -Wall
  hs-source-dirs:      main
  default-language:    Haskell2010

